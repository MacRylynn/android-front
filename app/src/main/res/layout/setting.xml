<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FFF8F8F8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:singleLine="false"
            android:text="摩米视觉实验室"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:singleLine="false"
            android:text="设置"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="35sp" />

        <ImageView
            android:layout_width="28sp"
            android:layout_height="28sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:src="@drawable/head" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="120sp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="10sp"
            android:src="@mipmap/examplehead" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="129dp"
            android:layout_marginTop="25dp"
            android:text="ROSE" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="12dp"
            android:text="hello~ 上午好   2019-11-16"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="230sp">

        <TableLayout
            android:layout_width="350sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30sp">

            <TableRow
                android:id="@+id/tablerow1"
                android:layout_marginTop="20sp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="28sp"
                    android:src="@drawable/family" />

                <TextView
                    android:text="家庭信息设置"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_height="15sp"
                    android:layout_marginLeft="60sp"
                    android:layout_marginTop="8sp"
                    android:src="@drawable/you" />
            </TableRow>

            <TableRow
                android:id="@+id/tablerow2"
                android:layout_marginTop="20sp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="28sp"
                    android:src="@drawable/correction" />

                <TextView
                    android:text="手机相机矫正"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_height="15sp"
                    android:layout_marginLeft="60sp"
                    android:layout_marginTop="8sp"
                    android:src="@drawable/you" />
            </TableRow>

            <TableRow android:layout_marginTop="20sp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="28sp"
                    android:src="@drawable/delete" />

                <TextView
                    android:text="清空本地缓存"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_height="15sp"
                    android:layout_marginLeft="60sp"
                    android:layout_marginTop="8sp"
                    android:src="@drawable/you" />
            </TableRow>

            <TableRow
                android:id="@+id/tablerow3"
                android:layout_marginTop="20sp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="58sp"
                    android:layout_height="26sp"
                    android:src="@drawable/modify" />

                <TextView
                    android:text="修改账号信息"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_height="15sp"
                    android:layout_marginLeft="60sp"
                    android:layout_marginTop="8sp"
                    android:src="@drawable/you" />
            </TableRow>

            <TableRow android:layout_marginTop="20sp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="28sp"
                    android:src="@drawable/exit" />

                <TextView
                    android:text="注销登录"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_height="15sp"
                    android:layout_marginLeft="60sp"
                    android:layout_marginTop="8sp"
                    android:src="@drawable/you" />
            </TableRow>

            <TableRow
                android:id="@+id/tablerow4"
                android:layout_marginTop="20sp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="28sp"
                    android:src="@drawable/aboutus" />

                <TextView
                    android:text="关于我们"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_height="15sp"
                    android:layout_marginLeft="60sp"
                    android:layout_marginTop="8sp"
                    android:src="@drawable/you" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</RelativeLayout>
